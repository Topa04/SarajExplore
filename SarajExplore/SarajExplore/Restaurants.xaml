                <!-- Restaurant No.8 -->
                <StackLayout HeightRequest="360" Spacing="15">
                    <Image Source="rv.jpg" HeightRequest="360" Aspect="AspectFill"/>
                    <Frame BackgroundColor="#8Ffbfba0" Margin="20,-355,20,0" Padding="0">
                        <StackLayout>
                            <Label Text="Restaurant Vapiano" TextColor="Black" FontSize="30" FontAttributes="Bold,Italic" Margin="10,5,0,10"/>
                            <Label Margin="10,0,10,5" Text="The famous international restaurant chain Vapiano brings to Sarajevo a combination of excellent cuisine and a pleasant atmosphere. Vapiano serves specialties of Italian cuisine that the chefs prepare before your eyes from fresh ingredients. According to the Italian proverb 'He who goes through life relaxed, lives longer and healthier.'" TextColor="Black" FontAttributes="Bold" FontSize="20" />
                            <Label Text="Working hours: Every day: 8am- 11pm" FontAttributes="Bold" TextColor="Black" FontSize="22" Margin="10,0,10,10"/>
                        </StackLayout>
                    </Frame>
                    <Grid HorizontalOptions="Center" ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" TabIndex="17" Clicked="openMore" HorizontalOptions="EndAndExpand" BackgroundColor="#8Ffbfba0" CornerRadius="20" Text="Show more" TextColor="Black" FontAttributes="Bold" TextTransform="None" FontSize="20"/>
