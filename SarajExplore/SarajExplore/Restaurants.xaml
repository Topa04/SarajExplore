                        <Button Grid.Column="2" TabIndex="37" Clicked="openMap" HorizontalOptions="EndAndExpand" BackgroundColor="#8Ffbfba0" CornerRadius="20" Text="Show on map" TextColor="Black" FontAttributes="Bold" TextTransform="None" FontSize="20"/>
