                <!-- Restaurant No.7 -->
                <StackLayout HeightRequest="380" Spacing="15">
                    <Image Source="rt.jpg" HeightRequest="380" Aspect="AspectFill"/>
                    <Frame BackgroundColor="#bF9fccfa" Margin="20,-375,20,0" Padding="0">
                        <StackLayout>
                            <Label Text="Restaurant Toplik" TextColor="Black" FontSize="30" FontAttributes="Bold,Italic" Margin="10,5,0,10"/>
                            <Label Margin="10,0,10,5" Text="We offer you a pleasant atmosphere and specialties of traditional cuisine. The pond has a small capacity, but all stages of the production process are represented in it, from fry production to consumption fish. In the pond as well as on the table, three types of trout can be found: Californian (Salma gairdneri), brown trout (Salvenilus fontinalis) and our brown trout (Salma trutta)." TextColor="Black" FontAttributes="Bold" FontSize="20" />
                            <Label Text="Working hours: Every day: 9am- 11pm" FontAttributes="Bold" TextColor="Black" FontSize="22" Margin="10,0,10,10"/>
                        </StackLayout>
                    </Frame>
                    <Grid HorizontalOptions="Center" ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Column="0" TabIndex="16" Clicked="openMore" HorizontalOptions="EndAndExpand" BackgroundColor="#bF9fccfa" CornerRadius="20" Text="Show more" TextColor="Black" FontAttributes="Bold" TextTransform="None" FontSize="20"/>
