                <StackLayout HeightRequest="380" Spacing="15">
                    <Image Source="gpv.jpg" HeightRequest="380" Aspect="AspectFill"/>
                    <Frame BackgroundColor="#cffc997c" Margin="20,-375,20,0" Padding="0">
                        <StackLayout>
                            <Label Text="Gastro Pub Vučko" TextColor="Black" FontSize="30" FontAttributes="Bold,Italic" Margin="10,5,0,10"/>
                            <Label Margin="10,0,10,5" Text="Vučko is pure heaven for beer lovers and what makes this pub stand out is that it offers more than 120 varieties of beer. The experience is made complete with the delicious must-try food.  The food is served on special trays that will take you back to 1984 and the opening of the Olympic Games, when Sarajevo was the center of the world." TextColor="Black" FontAttributes="Bold" FontSize="20" />
                            <Label Text="Working hours: Mon-Thu: 8am-01pm; Fri-Sat: 8am-02pm; Sun: 11am-01pm" FontAttributes="Bold" TextColor="Black" FontSize="22" Margin="10,0,10,10"/>
                        </StackLayout>
                    </Frame>
                    <Grid HorizontalOptions="Center" ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
