                <!-- Restaurant No.6 -->
                <StackLayout HeightRequest="360" Spacing="15">
                    <Image Source="rdh.jpg" HeightRequest="360" Aspect="AspectFill"/>
                    <Frame BackgroundColor="#9Fffffff" Margin="20,-355,20,0" Padding="0">
                        <StackLayout>
                            <Label Text="Restaurant Dos Hermanos" TextColor="Black" FontSize="30" FontAttributes="Bold,Italic" Margin="10,5,0,10"/>
                            <Label Margin="10,0,10,5" Text="The point of every plate that comes out of our kitchen is the satisfaction of the guest. That's why we put a lot of effort and love into the selection of ingredients and the preparation and serving of meals. The concept of Dos Hermanos restaurant is based on hedonism, ultimate enjoyment of food, drink and the environment in which you are." TextColor="Black" FontAttributes="Bold" FontSize="20" />
                            <Label Text="Working hours: Every day: 8am- 11pm" FontAttributes="Bold" TextColor="Black" FontSize="22" Margin="10,0,10,10"/>
                        </StackLayout>
                    </Frame>
                    <Grid HorizontalOptions="Center" ColumnSpacing="15">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                            <ColumnDefinition Width="auto"/>
                        </Grid.ColumnDefinitions>
